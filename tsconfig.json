{
  "alwaysStrict": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "lib": [
      "es2020"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2021"
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
    "cleanOutputDir": true,
    "entryPoints": [
      "src"
    ],
    "entryPointStrategy": "expand",
    "includeVersion": true,
    "out": "docs"
  }
}